{% extends 'base.html.twig' %}

{% block title %}
  Count index
{% endblock %}

{% block body %}
  <h1>Count index</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Date</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      <a href="{{ path('app_count_new') }}">Create new</a>
      {% for count in counts %}
        <tr>
          <td>{{ count.id }}</td>
          <td>{{ count.date ? count.date|date('Y-m-d H:i:s') : '' }}</td>
          <td>
            <a href="{{ path('app_count_show', { id: count.id }) }}">show</a>
            <a href="{{ path('app_count_edit', { id: count.id }) }}">edit</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="3">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
