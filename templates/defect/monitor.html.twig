{% extends 'base.html.twig' %}

{% block title %}
  Defect index
{% endblock %}

{% block body %}
  <h1>Defect Dashboard</h1>
  <div class="row">
    <div class="col-4 m-2">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col m-2 badgeCurrentWeek d-flex justify-content-center align-items-center">Current Week Defects</div>
        <div class="col m-2 badgeCurrentWeekResult d-flex justify-content-center align-items-center">32</div>
      </div>
    </div>

    <div class="col-4 m-2">
      <div id="canva-container-breakDown">{{ render_chart(chartBreakDown) }}</div>
    </div>
  </div>
  <div class="row p-2">
    <div class="col-12">
      <div id="canva-container-fullYear">{{ render_chart(chartFullYear) }}</div>
    </div>
  </div>
{% endblock %}
